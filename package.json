{
  "name": "dynamic-mcp-server",
  "version": "1.5.3",
  "description": "A versatile server for the Model Context Protocol (MCP) that dynamically configures tools from a JSON file.",
  "bin": {
    "dynamic-mcp-server": "src/main.js"
  },
  "scripts": {
    "test": "jest",
    "verify:protocol": "scripts/verify-mcp-protocol.sh",
    "verify:clients": "scripts/verify-mcp-clients.sh",
    "verify:clients:full": "EXERCISE_CLI=1 scripts/verify-mcp-clients.sh"
  },
  "keywords": [
    "mcp",
    "ai",
    "tools"
  ],
  "author": "Kyle Aaron",
  "license": "MIT",
  "preferGlobal": true,
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "execa": "^5.1.1",
    "glob": "^13.0.3",
    "zod": "^4.3.6"
  },
  "overrides": {
    "glob": "^13.0.3",
    "test-exclude": "^7.0.1",
    "minimatch": "^10.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0"
  }
}
